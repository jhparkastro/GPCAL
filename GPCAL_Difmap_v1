
! Selects input uv data
observe %1

multi_model False

mapcolor rainbow, 1, 0.5

! Cleaning Stokes PI
select q, %2

! Map size
mapsize %3,%4

! Uniform weight
uvweight %5,%6

! Reading the cleaning windows (mask)
rwin %7

do i=1,100
clean 100, 0.02, imstat(rms)*%8
end do

select i, %2
save %9.IF%2.q

clrmod tru

! Cleaning Stokes PI
select u, %2

! Uniform weight
uvweight %5,%6

do i=1,100
clean 100, 0.02, imstat(rms)*%8
end do

select i, %2
save %9.IF%2.u

exit

